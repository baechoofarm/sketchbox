{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "allowJs": false,
    "strict": true,
    "declaration": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {"path": "./packages/sketchbox"},
    {"path": "./packages/sketchbox-react"}
  ]
}
